/* pages/welcome/welcome.wxss */
.page-container {
	position: relative;
}
.page-container::before {
	content: "";
	width: 170%;
	height: 75%;
	position: absolute;
	left: -20%;
	top: 0;
	border-radius: 0 0 50% 50%;
	background: rgb(223, 222, 222);
	z-index: -10;
}
.page-container::after {
	content: "";
	width: 150%;
	height: 75%;
	position: absolute;
	left: -20%;
	top: -35rpx;
	border-radius: 0 0 50% 50%;
	background: #ccc;
	z-index: -9;
}
.title-container {
	font-size: 20px;
	position: relative;
	top: 100rpx;
	left: 100rpx;
}
.title {
	font-size: 25px;
	font-weight: 600;
}
.content-container {
	font-size: 15px;
	color: #666;
	line-height: 2;
	position: relative;
	top: 180rpx;
	left: 100rpx;
}
.btn {
	color: #fff;
	background: #000;
	text-align: center;
	line-height: 120rpx;
	padding: 0;
	position: absolute;
	bottom: 80rpx;
	left: 50%;
	transform: translateX(-50%);
	border-radius: 0;
}
.btn_hover {
	opacity: 0.6;
}